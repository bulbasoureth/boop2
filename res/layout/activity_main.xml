<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff02003b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.StudyBreak.MainActivity" >

    <ImageView
        android:id="@+id/imageView_ring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/dial"
        android:scaleType="matrix"
        android:src="@drawable/graphic_ring" />

    <TextView
        android:id="@+id/display_time"
        style="android:textViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/minute_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonGO"
        android:layout_alignLeft="@+id/buttonGO"
        android:layout_below="@+id/display_time"
        android:layout_marginTop="17dp"
        android:text="@string/minutes_label"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonGO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_ring"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#ff02003b"
        android:singleLine="true"
        android:text="@string/Go_button"
        android:textColor="#ffffffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question_time"
        style="android:textViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:enabled="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/question_time"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold" />

</RelativeLayout>